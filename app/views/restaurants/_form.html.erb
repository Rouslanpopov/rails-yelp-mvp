<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= simple_form_for restaurant do |f| %>
        <%= f.input :name %>
        <%= f.input :address, placeholder: 'enter an address' %>
        <%= f.input :category, collection: Restaurant::CAT %>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
